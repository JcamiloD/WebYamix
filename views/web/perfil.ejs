    const enteredPassword = document.getElementById("editPassword").value;

    if (enteredPassword === correctPassword) {
      // Habilitar los campos de edición
      document.getElementById("editName").disabled = false;
      document.getElementById("editLastName").disabled = false;
      document.getElementById("editEmail").disabled = false;
      document.getElementById("editDOB").disabled = false;
      document.getElementById("saveBtn").style.display = "block"; // Mostrar el botón de guardar
      document.getElementById("error-message").style.display = "none"; // Ocultar el mensaje de error
    } else {
      // Mostrar mensaje de error si la contraseña es incorrecta
      document.getElementById("error-message").style.display = "block";
      document.getElementById("saveBtn").style.display = "none"; // Ocultar el botón de guardar
    }
  });

  document.getElementById("saveBtn").addEventListener("click", function () {
    // Guardar los cambios (aquí puedes agregar tu lógica de guardar en backend)
